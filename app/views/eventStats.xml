<Alloy>
	<TabGroup id="assignmentTab">
		<Tab id="captureTab" title="Capture">
			<Window backgroundColor="white" id="captureWin">
				<ActivityIndicator platform="android" id="activityIndicator" style="Ti.UI.ActivityIndicatorStyle.DARK" message='Loading...' top="160" left="100"></ActivityIndicator>
				<ActivityIndicator platform="ios" id="activityIndicator" style="Ti.UI.iPhone.ActivityIndicatorStyle.DARK" message='Loading...' top="160" left="100"></ActivityIndicator>
				<Label id="lastAction" text="No game stats captured yet!"/>
				<TableView id="statsTable">
				</TableView>
			</Window>
		</Tab>
		<Tab id="runningTotalsTab" title="History">
			<Window title="Running Totals" backgroundColor="white" id="runningTotalsWin">
				<ActivityIndicator platform="android" id="rtActivityIndicator" style="Ti.UI.ActivityIndicatorStyle.DARK" message='Loading...' top="160"></ActivityIndicator>
				<ActivityIndicator platform="ios" id="rtAactivityIndicator" style="Ti.UI.iPhone.ActivityIndicatorStyle.DARK" message='Loading...' top="160"></ActivityIndicator>
				<TableView id="historyTable" visible="false">
        		</TableView>
			</Window>
		</Tab>
	</TabGroup>
</Alloy>